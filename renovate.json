{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "git-submodules": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchManagers": ["git-submodules"],
      "schedule": "at any time",
      "enabled": true,
      "automerge": true,
      "ignoreTests": true
    }
  ]
}
